{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": [
    "index.ts",
    "db/**/*",
    "api/**/*",
    "scripts/**/*",
    "core/**/*",
    "watch/**/*",
    "client/**/*",
    "adapters/nextjs.ts",
    "adapters/express.ts",
    "schema/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
